    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/register_app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/newafter" />

        <TextView
            android:id="@+id/register_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看点新闻"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/register_app_logo"
            app:layout_constraintEnd_toStartOf="@+id/register_user_icon"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toEndOf="@+id/register_app_logo"
            app:layout_constraintTop_toTopOf="@+id/register_app_logo" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_user_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/no_login_avatar"
            app:layout_constraintBottom_toBottomOf="@+id/register_app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/register_app_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_register_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="账号"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/ed_register_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="35dp"
                android:ems="10"
                android:hint="请输入注册账号"
                android:maxLines="1"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_register_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="密码"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/ed_register_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="35dp"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:minHeight="48dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_register_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:text="确认密码"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/ed_register_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="35dp"
                android:ems="10"
                android:hint="请确定输入密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:minHeight="48dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/register_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#F44336"
                android:text="注册"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

